<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/cozum"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/sonuc"
        android:layout_marginStart="16dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="30dp"
        android:text="İşlem"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/sonuc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/buton_layout"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="16dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="80dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:id="@+id/buton_layout"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginHorizontal="15dp"

            android:orientation="horizontal">

            <Button
                android:id="@+id/sil"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="#CDC9C9"
                android:text="AC"
                android:layout_marginHorizontal="5dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:cornerRadius="150dip" />

            <Button
                android:id="@+id/pozitifnegatif"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="#CDC9C9"
                android:text="+/-"
                android:layout_marginHorizontal="5dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:cornerRadius="150dip" />

            <Button
                android:id="@+id/yuzde"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="#CDC9C9"
                android:text="%"
                android:textColor="@color/black"
                android:layout_marginHorizontal="5dp"

                android:textSize="25dp"
                app:cornerRadius="150dip" />

            <Button
                android:id="@+id/bolme"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="#56FF6D00"
                android:text="÷"
                android:textColor="@color/white"
                android:layout_marginHorizontal="5dp"

                android:textSize="25dp"
                app:cornerRadius="150dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginHorizontal="15dp"

            android:orientation="horizontal">

            <Button
                android:id="@+id/yedi"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="#605D5D"
                android:text="7"
                android:layout_marginHorizontal="5dp"

                android:textColor="@color/white"
                android:textSize="25dp"
                app:cornerRadius="150dip" />

            <Button
                android:id="@+id/sekiz"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="#605D5D"
                android:text="8"
                android:layout_marginHorizontal="5dp"

                android:textColor="@color/white"
                android:textSize="25dp"
                app:cornerRadius="150dip" />

            <Button
                android:id="@+id/dokuz"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="#605D5D"
                android:text="9"
                android:textColor="@color/white"
                android:layout_marginHorizontal="5dp"

                android:textSize="25dp"
                app:cornerRadius="150dip" />

            <Button
                android:id="@+id/carpma"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="#56FF6D00"
                android:text="x"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:layout_marginHorizontal="5dp"

                app:cornerRadius="150dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginHorizontal="15dp"

            android:orientation="horizontal">

            <Button
                android:id="@+id/dort"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="#605D5D"
                android:text="4"
                android:textColor="@color/white"
                android:layout_marginHorizontal="5dp"
                android:textSize="25dp"
                app:cornerRadius="150dip" />

            <Button
                android:id="@+id/bes"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="#605D5D"
                android:text="5"
                android:textColor="@color/white"
                android:layout_marginHorizontal="5dp"

                android:textSize="25dp"
                app:cornerRadius="150dip" />

            <Button
                android:id="@+id/alti"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="#605D5D"
                android:text="6"
                android:textColor="@color/white"
                android:layout_marginHorizontal="5dp"

                android:textSize="25dp"
                app:cornerRadius="150dip" />

            <Button
                android:id="@+id/cikarma"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="#56FF6D00"
                android:text="-"
                android:textColor="@color/white"
                android:layout_marginHorizontal="5dp"

                android:textSize="25dp"
                app:cornerRadius="150dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginHorizontal="15dp"

            android:orientation="horizontal">

            <Button
                android:id="@+id/bir"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="#605D5D"
                android:text="1"
                android:layout_marginHorizontal="5dp"

                android:textColor="@color/white"
                android:textSize="25dp"
                app:cornerRadius="150dip" />

            <Button
                android:id="@+id/iki"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="#605D5D"
                android:text="2"
                android:layout_marginHorizontal="5dp"
                android:textColor="@color/white"
                android:textSize="25dp"
                app:cornerRadius="150dip" />

            <Button
                android:id="@+id/uc"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="#605D5D"
                android:text="3"
                android:textColor="@color/white"
                android:layout_marginHorizontal="5dp"
                android:textSize="25dp"
                app:cornerRadius="150dip" />

            <Button
                android:id="@+id/toplama"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="#56FF6D00"
                android:text="+"
                android:textColor="@color/white"
                android:layout_marginHorizontal="5dp"
                android:textSize="25dp"
                app:cornerRadius="150dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginHorizontal="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sifir"
                android:layout_width="135dp"
                android:layout_height="72dp"
                app:cornerRadius="150dip"
                android:textAlignment="textStart"
                android:textSize="25dp"
                android:backgroundTint="#605D5D"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="7dp"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:text="0" />



            <Button
                android:id="@+id/nokta"
                android:layout_width="36dp"
                android:layout_height="72dp"
                app:cornerRadius="150dip"
                android:textSize="25dp"
                android:backgroundTint="#605D5D"
                android:layout_marginRight="3dp"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:text="," />

            <Button
                android:id="@+id/esit"
                android:layout_width="36dp"
                android:layout_height="72dp"
                app:cornerRadius="150dip"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:backgroundTint="#56FF6D00"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1"
                android:text="=" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>